/* pages/components/navbar.wxss */
.navbar{
  display: block;
  padding: 12% 0 0 0;
  width: 100%;
  height: 50px;
  background-color: #C7DCEF;
  box-shadow: 0 5px 10px #DEDEDE;
}

.header{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}


.text{
  display: inline-block;
  color: white;
  font-size: 22px;
}

.icon{
  display: inline-block;
  text-align: center;
  padding-left:10px;
  padding-top:5px;
  width: 30px;
  height: 30px;
}